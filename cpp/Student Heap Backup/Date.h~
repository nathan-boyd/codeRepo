#ifndef DATE_H
#define DATE_H

class Date{

 private:
  int iMonth;
  int iDay;
  int iYear;

 public:

  Date(){
  }//end method

  Date(int nMonth, int nDay, int nYear){
    SetDate(nMonth, nDay, nYear);
  }//end method

  void SetDate(int lMonth, int lDay, int lYear){
    iMonth = lMonth;
    iDay = lDay;
    iYear = lYear;
  }//end method

  void SetMonth(int iMonth){
    Date::iMonth=iMonth;
  }//end method

  void SetDay(int iDay){
    Date::iDay=iDay;
  }//end method

  void SetYear(int iYear){
    Date::iYear=iYear;
  }//end method

  int GetMonth() const { 
    return iMonth; 
  }//end method

  int GetDay() const { 
    return iDay; 
  }//end method

  int GetYear() const { 
    return iYear; 
  }//end method
};//end class

#endif
