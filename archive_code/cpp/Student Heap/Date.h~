#ifndef DATE_H_EXISTS
#define DATE_H_EXISTS

#include <string>

using namespace std;

class Date{

  private:

    string sMonth;
    string sDay;
    string sYear;
    string sCompleteDate;

  public:

    Date();
    Date(string sUnformatted);

    friend ostream& operator<<(ostream& os, Date& c);

    void setMonth(string Month);
    string getMonth();

    void setDay(string Day);
    string getDay();  
  
    void setYear(string Year);
    string getYear();   

    string getCompleteDate();

    

};//end class def

#endif
